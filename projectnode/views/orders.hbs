<h1>Orders</h1>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
        <tr>
            <td>{{this.orderID}}</td>
            <td>{{this.orderDate}}</td>
            <td>{{this.customerName}}</td>
            <td>{{this.customerEmail}}</td>
            <td>
                <form id="delete_order_form" method="POST" action="/orders/delete">
                    <input type="hidden" name="delete_order_id" value="{{this.orderID}}" />
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add a New Order</h2>
<form id="create_order_form" method="POST" action="/orders/create">
    <label for="create_order_date">Order Date: </label>
    <input type="date" name="create_order_date" id="create_order_date" required />

    <label for="create_order_customer">Customer: </label>
    <select name="create_order_customer" id="create_order_customer" required>
        <option value="" disabled selected>Select a Customer</option>
        {{#each customers}}
        <option value="{{this.customerID}}">{{this.firstName}} {{this.lastName}}</option>
        {{/each}}
    </select>

    <input type="submit" />
</form>

<h2>Update an Order</h2>
<form id="update_order_form" method="POST" action="/orders/update">
    <label for="update_order_id">Order to Update: </label>
    <select name="update_order_id" id="update_order_id" required>
        <option value="" disabled selected>Select an Order</option>
        {{#each orders}}
        <option value="{{this.orderID}}">Order #{{this.orderID}} - {{this.customerName}}</option>
        {{/each}}
    </select>

    <label for="update_order_date">New Order Date: </label>
    <input type="date" name="update_order_date" id="update_order_date" required />

    <input type="submit" />
</form>
